<h1><%= @article.name %></h1>
  <p>by <%= @article.author_name %> on <%= @article.published_at %></p>
  <p><%= image_tag @article.photo.url(:thumb) %></p>
  <p><%= @article.content %></p>
<hr>
<p><%= link_to "Edit Article", edit_article_path(@article), :class => "btn btn-primary" %></p>
<p><%= link_to "Delete Article", article_path(@article),
                              data: { confirm: 'You sure?' },
                              method: "delete",
                              :class => "btn btn-danger" %></p>
<%= link_to "Homepage", articles_path, :class => "btn btn-primary" %>
