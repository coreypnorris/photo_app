<%= render("layouts/errors", :object => @article) %>

<%= form_for(@article) do |f| %>
  <div class="form-group">
    <%= f.label :name %></br>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label :content %></br>
    <%= f.text_area :content %>
  </div>
  <div class="form-group">
    <%= f.label :author_name %></br>
    <%= f.text_field :author_name %>
  </div>
  <%= f.submit(:class => "btn btn-primary") %>
<% end %>
