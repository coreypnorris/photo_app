<%= render("layouts/errors", :object => @article) %>

<%= form_for @article, :html => { :multipart => true } do |f| %>
  <div class="form-group">
    <%= f.label :name %></br>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label :content %></br>
    <%= f.text_area :content %>
  </div>
  <div class="form-group">
    <%= f.label :author_name %></br>
    <%= f.text_field :author_name %>
  </div>
  <div class="form-group">
    <%= f.label :photo, "Photo" %>
    <%= f.file_field :photo %>
  </div>
  <%= f.submit(:class => "btn btn-primary") %>
<% end %>
